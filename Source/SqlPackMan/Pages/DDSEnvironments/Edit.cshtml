@page
@model SqlPackMan.Pages.DdsEnvironments.EditModel
@using SqlPackMan.Models
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>DdsEnvironment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DdsEnvironment.ID" />
            <div class="form-group">
                <label asp-for="DdsEnvironment.Name" class="control-label"></label>
                <input asp-for="DdsEnvironment.Name" class="form-control" />
                <span asp-validation-for="DdsEnvironment.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DdsEnvironment.Server" class="control-label"></label>
                <input asp-for="DdsEnvironment.Server" class="form-control" />
                <span asp-validation-for="DdsEnvironment.Server" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DdsEnvironment.SourceEnv" class="control-label"></label>
                <select asp-for="DdsEnvironment.SourceEnv" asp-items="Html.GetEnumSelectList<Lists.DdsEnvironment>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="DdsEnvironment.SourceEnv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DdsEnvironment.TargetEnv" class="control-label"></label>
                <select asp-for="DdsEnvironment.TargetEnv" asp-items="Html.GetEnumSelectList<Lists.DdsEnvironment>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="DdsEnvironment.TargetEnv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
