@using SqlPackMan.Models
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PackageItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PackageItem.PackageId" class="control-label"></label>
                <input asp-for="PackageItem.PackageId" class="form-control" />
                <span asp-validation-for="PackageItem.PackageId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="PackageItem.DbObjectType" asp-items="Html.GetEnumSelectList<Lists.DbObjectType>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="PackageItem.DbObjectType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PackageItem.DbObjectName" class="control-label"></label>
                <input asp-for="PackageItem.DbObjectName" class="form-control" />
                <span asp-validation-for="PackageItem.DbObjectName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PackageItem.StepNumber" class="control-label"></label>
                <input asp-for="PackageItem.StepNumber" class="form-control" />
                <span asp-validation-for="PackageItem.StepNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

